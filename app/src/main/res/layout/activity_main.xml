<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">

    <Button
        android:id="@+id/bt_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="main_play"
        android:text="@string/play" />

    <Button
        android:id="@+id/bt_scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bt_play"
        android:layout_below="@+id/bt_play"
        android:onClick="main_scores"
        android:text="@string/scores" />

    <Button
        android:id="@+id/bt_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bt_scores"
        android:layout_below="@+id/bt_scores"
        android:onClick="main_about"
        android:text="About" />

    <Button
        android:id="@+id/bt_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bt_about"
        android:layout_below="@+id/bt_about"
        android:onClick="main_settings"
        android:text="PREF" />

    <Button
        android:id="@+id/bt_leave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/bt_settings"
        android:layout_alignParentBottom="true"
        android:onClick="main_leave"
        android:text="Leave" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Flooditarium"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_above="@+id/bt_play"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:padding="25dp"
        app:srcCompat="@drawable/icon" />

    <Button
        android:id="@+id/bt_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/bt_settings"
        android:layout_below="@+id/bt_settings"
        android:onClick="main_help"
        android:text="Help" />

</RelativeLayout>